<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:padding="10dp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center_vertical|center_horizontal">
	<TableRow android:layout_height="wrap_content" android:id="@+id/tableRow1" android:layout_gravity="center_vertical|center_horizontal" android:layout_width="wrap_content">
		<TextView android:layout_width="wrap_content" android:id="@+id/textView1" android:gravity="left" android:textSize="13sp" android:layout_height="wrap_content" android:textColor="#fff" android:text="Edit here the text your are about to post to your Twitter.."></TextView>
	</TableRow>
	<TableRow android:layout_height="wrap_content" android:id="@+id/tableRow2" android:layout_gravity="center_vertical|center_horizontal" android:layout_width="wrap_content" >
		<EditText android:hint="Write your review" android:layout_marginTop="15dp" android:layout_width="250dp" android:id="@+id/revieew" android:layout_height="100dp" android:text="EditText" android:layout_gravity="center_vertical|center_horizontal"></EditText>
	</TableRow>
	<TableRow android:layout_height="wrap_content" android:id="@+id/tableRow3" android:layout_gravity="center_vertical|center_horizontal" android:layout_width="wrap_content">
		<Button android:layout_marginTop="15dp" android:layout_width="wrap_content" android:layout_gravity="center_vertical|center_horizontal" android:text="    Submit    " android:id="@+id/button1" android:layout_height="wrap_content"></Button>
	</TableRow>
</LinearLayout>